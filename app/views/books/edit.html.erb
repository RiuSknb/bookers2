



<div class='container'>
  <div class='row'>
    <div class='col-sm-12 col-md-8 col-lg-5 px-5'>

      <h2 class="mt-3">Editing book</h2>
      <% if @book && @book.errors.any? %>
        <h3 class="mt-3"><%=@book.errors.count %> errors prohibited this obj from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>




      <%= form_with model: @book, class: "mt-3" do |f| %>
        <label>Title</label>
        <%= f.text_field :title, autofocus: true, class: "form-control" %>

        <label class="mt-2">Opinion</label>
        <%= f.text_area :body, autofocus: true, class: "form-control" %>

        <%= f.submit 'Update Book', class: "btn btn-success mt-2" %>
      <% end %>
      <p class="mt-3"><%= link_to 'Show', book_path(@book) %>
       |
       <%=link_to 'Back', books_path %></p>
    </div>
  </div>
</div>


<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>

      <h2 class='mt-3'>User info</h2>
    <%= form_with model: @user do |f| %>

      <label for="inputName">Name</label><br>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"" %><br>

      <label class="mt-3" >Image</label><br>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>

      <label class="mt-3" >Introduction</label><br>
      <%= f.text_area :introduction %>

      <%= f.submit 'Update User', class: "btn btn-success mt-2" %>
    <% end %>
    </div>
  </div>
</div>

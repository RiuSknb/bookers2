

<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-5'>

      <h2 class='mt-3'>User info</h2>
      <% if @user && @user.errors.any? %>
        <h3 class="mt-3"><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @user do |f| %>

      <label for="inputName">Name</label><br>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"" %><br>

      <label class="mt-3" >Image</label><br>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>

      <label class="mt-3" >Introduction</label><br>
      <%= f.text_area :introduction %><br>

      <%= f.submit 'Update User', class: "btn mt-2", style: "background-color: gray; color: white;" %>
    <% end %>
    </div>
  </div>
</div>

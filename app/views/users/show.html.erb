<!--User info-->

<!--# app/views/users/show.html.erbを変更-->
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2 class="mt-3">User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class='table'>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </table>

        <div class='row'>
          <% if @user == current_user %>
            <%= link_to raw('<i class="fa-solid fa-user-gear"></i>'), edit_user_path(@user), class: "btn btn-outline-secondary btn-block mt-3"%>
          <% else %>
            <%= link_to raw('<i class="fa-solid fa-user-gear"></i>'), user_path(current_user.id), class: "btn btn-outline-secondary btn-block mb-3" %>
          <% end %>
        </div>


<!--本の新規登録-->


      <h2 class="mt-3">New book</h2>
      <%= form_with model: Book.new, url: books_path, class: "mt-3" do |f| %>
        <label>Title</label>
        <%= f.text_field :title, class: "form-control" %>

        <label class="mt-2">Opinion</label>
        <%= f.text_area :body, class: "form-control" %>

        <%= f.submit 'Create Book', class: "btn btn-success mt-2" %>
      <% end %>
    </div>


<!--今までに投稿した本の一覧-->

    <div class='col-md-8 offset-md-1'>
      <h2 class="mt-3">Books</h2>

      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= image_tag @user.get_profile_image(100,100) %></td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>








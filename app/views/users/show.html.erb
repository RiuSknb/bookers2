<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <table class='table'>
        <tr>
          <td><%= image_tag @user.get_profile_image(100,100) %></td>
        </tr>
        <tr>
          <th>name</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>introduction</th>
          <td><%= @user.introduction %></td>
        </tr>
      </table>

      <div class='row'>
        <% if @user == current_user %>
          <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
        <% else %>
          <p><%= link_to "プロフィール編集", user_path(current_user.id) %></p>
        <% end %>
      </div>

      <h2 class="mt-3">New book</h2>
      <%= form_with model: Book.new, url: books_path do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>

        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
      <% end %>
    </div>


<!--今までに投稿した本の一覧-->


    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>

      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      </table>
    </div>
  </div>
</div>








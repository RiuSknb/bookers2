<h1>ユーザーの画面だよ（show)</h1>


<h3>User info</h3>
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h2>name:<%= @user.name %></h2>
  <h2>introduction:--</h2>

</div>
<!--新規投稿フォーム-->


<h1>New book</h1>
<%= form_with model: Book.new, url: books_path do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>




<!-- ユーザーの投稿一覧 -->
<h1>Books</h1>
<p>Title</p>
<p>Opinion</p>

<% @books.each do |book| %>
<div>
  <p><%= image_tag book.user.get_profile_image(100,100) %></p>
  <p><%= book.title %></p>
  <p><%= book.body %></p>
</div>
<% end %>